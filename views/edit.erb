<p class="mb-4">メモの変更</p>

<form method="post" action="/memos/<%= @id %>">
  <input type="hidden" name="_method" value="patch">
  <input class="w-full mb-4 p-4 shadow-inner" type="text" name="memo_title" value="<%= h(@detail_memo["title"]) %>" required><br>
  <textarea class="w-full h-48 mb-4 p-4 shadow-inner" name="memo_text" required><%= h(@detail_memo["body"]) %></textarea><br>
  <input class="bg-indigo-700 font-semibold text-white py-2 px-4 rounded" type="submit" value="変更">
</form>
